.main-col
    .latest-tweets-header
        h3 Latest Tweets
    .status
        .type-in
            i.fas.fa-user
            input(type='text' placeholder="What's happening?")
        .lower-btns
            .icons
                i.far.fa-image
                i.fas.fa-chart-bar
                i.far.fa-smile
                i.far.fa-calendar-alt
            .send-tweet Tweet
    .posts
        ul
            //- Post with Pic Article
            li.post
                .icon-col
                    img.user-icon(src='imgs/prof-4.jpg' alt='')
                    .thread-spacer
                .main-msg-col
                    .top-info
                        .user-name UserName Here
                        .handle &nbsp;@Usernameyo
                        .time &nbsp;&bull; 2m
                    .msg-body This post shares a photo!

                    .msg-img 
                        img(src="imgs/pic-2.jpg", alt="abstract-colors")

                    .msg-btns
                        i.far.fa-comment
                        i.fas.fa-retweet
                        i.far.fa-heart
                        i.fas.fa-upload

